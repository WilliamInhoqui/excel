        .ListFillRange = ""
        .LinkedCell = ""
        .Display3DShading = True
    End With
    ActiveSheet.Shapes.Range(Array("Drop Down 3")).Select
    With Selection
        .ListFillRange = ""
        .LinkedCell = ""
        .Display3DShading = True
